<Window x:Class="Lab3.Forms.AddTeacher"
        ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3.Forms"
        xmlns:userControls="clr-namespace:Lab3.UserControls"
        mc:Ignorable="d"
        Title="AddTeacher" Height="500" Width="500">
    
    <Grid MaxWidth="500" Margin="70 0">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <userControls:InputField x:Name="inputFieldNewTeacherSurname" LabelText="Прізвище" Grid.Row="1"/>
        <userControls:InputField x:Name="inputFieldNewTeacherName" LabelText="Ім'я" Grid.Row="2"/>
        <userControls:InputField x:Name="inputFieldNewTeacherPatronymic" LabelText="По батькові" Grid.Row="3"/>

        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Label x:Name="lblInput" Content="Досвід роботи (в роках)" VerticalAlignment="Bottom" />
            <TextBox x:Name="numericNewTeacherExperience" MaxLength="2" Grid.Row="1" VerticalContentAlignment="Center" Text="0" PreviewTextInput="numericNewTeacherExperience_PreviewTextInput"/>
        </Grid>

        <Grid Grid.Row="5" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="labelForPhotoTeacher"  Content="Фото: " VerticalAlignment="Bottom" />
            <Button x:Name="btnAddPhotoTeacher" Grid.Column="1" Content="+ Add Photo" Padding="10 0" HorizontalAlignment="Left" Click="btnAddPhotoTeacher_Click" />
            <Label x:Name="lblPhotoPathTeacher" Grid.Column="1" HorizontalAlignment="Left"/>
            <Button x:Name="btnNewTeacherSave" Grid.Column="2" Content="Save" Click="btnNewTeacherSave_Click"/>
        </Grid>
    </Grid>
</Window>
