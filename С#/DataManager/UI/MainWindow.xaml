<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem x:Name="MenuItemOpen" Header="Відкрити" Click="MenuItemOpen_Click"/>
                <MenuItem Header="Зберегти як">
                    <MenuItem Header="CSV" Tag="csv" Click="MenuItem_Click"/>
                    <MenuItem Header="JSON" Tag="json" Click="MenuItem_Click"/>
                    <MenuItem Header="XML" Tag="xml" Click="MenuItem_Click"/>
                    <MenuItem Header="XLSX" Tag="xlsx" Click="MenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Останні файли" x:Name="MenuItemRecentFiles"/>
                <MenuItem x:Name="MenuItemExit" Header="Вихід" Click="MenuItemExit_Click"/>
            </MenuItem>
            <MenuItem Header="Звіти">
                <MenuItem x:Name="xlsxReport" Header="Згенерувати XLSX-звіт" Click="xlsxReport_Click"/>
                <MenuItem Header="Згенерувати DOCX-звіт"/>
            </MenuItem>
            <MenuItem x:Name="MenuItemDiagrams" Header="Графіки"/>
        </Menu>

        <DataGrid x:Name="DataGridTransactions" Grid.Row="1" AutoGenerateColumns="True"/>

        <StatusBar Grid.Row="2" Padding="5">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem x:Name="StatusBarPath" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"/>
            <StatusBarItem x:Name="StatusBarQuantity" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"/>
            <StatusBarItem x:Name="StatusBarLastOperationTime" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>
        </StatusBar>
    </Grid>
</Window>
